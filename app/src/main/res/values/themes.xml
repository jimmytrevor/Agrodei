<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Agrodei" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/theme_adaptive</item>
		<item name="colorPrimaryVariant">@color/theme_adaptive</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/accent</item>
		<item name="colorSecondaryVariant">@color/accent</item>
		<item name="colorOnSecondary">@color/white</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/theme_adaptive</item>
		<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/main_color</item>
		<!-- Customize your theme here. -->
		
		<item name="android:fontFamily">@font/montserrat_regular</item>
		
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
	</style>
	
	<style name="Theme.Agrodei.Init">
		<item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
	</style>
	
	<style name="Theme.Agrodei.SendCode">
		<item name="android:statusBarColor" tools:targetApi="l">@color/accent</item>
		<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/main_color</item>
		
		<item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
	</style>
	
	<style name="Theme.Agrodei.VerificationCode">
		<item name="android:statusBarColor" tools:targetApi="l">@color/theme_adaptive</item>
		<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/accent</item>
		
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
	</style>
	<style name="CollapsedToolbarTitle" parent="TextAppearance.AppCompat.Title">
		<item name="android:textColor">@color/text_adaptive</item>
		<item name="fontFamily">@font/montserrat_regular</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="ExpandedToolbarTitle" parent="TextAppearance.AppCompat.Title">
		<item name="android:textSize">35sp</item>
		<item name="android:textColor">@color/text_adaptive</item>
		<item name="fontFamily">@font/montserrat_regular</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="Theme.Agrodei.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	
	<style name="Theme.Agrodei.Account">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
	</style>
	
	<style name="Theme.Agrodei.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="Theme.Agrodei.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
	<style name="CircularDeterminateProgressBarOne">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/progress_one</item>
	</style>
	<style name="CircularDeterminateProgressBarTwo">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/progress_two</item>
	</style>
	<style name="CircularDeterminateProgressBarThree">
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/progress_three</item>
	</style>
</resources>