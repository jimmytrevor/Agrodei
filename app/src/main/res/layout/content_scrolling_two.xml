<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_account"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".acitivties.others.Account">
	
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:orientation="vertical">
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
		              android:orientation="horizontal"
		              android:padding="@dimen/ten_radius"
		              android:weightSum="3">
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
			              android:orientation="vertical"
			              android:layout_weight="1">
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:src="@drawable/ic_round_ac_unit"
					app:tint="@color/icon_adaptive"/>
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
				          android:text="Text"
				          android:textColor="@color/text_adaptive"
				          android:textAlignment="center"
				          android:padding="@dimen/ten_radius"
				          android:textAppearance="@style/TextAppearance.AppCompat.Small"
				          android:textStyle="bold"/>
					
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
			              android:orientation="vertical"
			              android:layout_weight="1">
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
			              android:orientation="vertical"
			              android:layout_weight="1">
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:src="@drawable/ic_round_add_ic_call_24"
					app:tint="@color/icon_adaptive"/>
				<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
				          android:text="Text"
				          android:textColor="@color/text_adaptive"
				          android:textAlignment="center"
				          android:padding="@dimen/ten_radius"
				          android:textAppearance="@style/TextAppearance.AppCompat.Small"
				          android:textStyle="bold"/>
					
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</androidx.core.widget.NestedScrollView>