<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">
	<androidx.cardview.widget.CardView
		android:layout_width="160dp"
		android:layout_height="240dp"
		app:cardCornerRadius="@dimen/ten_radius"
		app:cardBackgroundColor="@color/main_color"
		android:layout_margin="@dimen/five_margin"
		app:cardElevation="1dp">
		<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
		              android:orientation="vertical">
			<ImageView android:layout_width="match_parent" android:layout_height="150dp"
			           android:src="@drawable/init_bg"
			           android:scaleType="centerCrop"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:weightSum="3"
			android:orientation="vertical">
			<TextView android:layout_width="match_parent" android:layout_height="0dp"
			          android:layout_weight="2"
			          android:textStyle="bold"
			          android:maxLines="4"
			          android:gravity="start|center"
			          android:padding="@dimen/five_margin"
			          android:textColor="@color/text_adaptive"
			          android:textAppearance="@style/TextAppearance.AppCompat.Small"
			          android:text="@string/large_text"
			          android:ellipsize="end"/>
			<TextView android:layout_width="match_parent" android:layout_height="0dp"
			          android:layout_weight="1"
			          android:textStyle="bold"
			          android:singleLine="true"
			          android:gravity="start|center"
			          android:padding="@dimen/five_margin"
			          android:textAppearance="@style/TextAppearance.AppCompat.Small"
			          android:text="@string/dummyDate"
			          android:ellipsize="end"/>
		
		</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>

</LinearLayout>